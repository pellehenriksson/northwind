@model Northwind.Web.InputModels.ProductCategoryInputModel

@{
    ViewBag.Title = "Change category";
}

<div class="row">
    <div class="page-header">
        <h1>Change name <small>for @Model.Name</small></h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @Html.ValidationSummary(true)
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form action="@Url.Action("ChangeCategory")" method="post" class="form-horizontal" role="form">
            
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.Name)

            <div class="form-group">
                @Html.LabelFor(x => x.CategoryId, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.CategoryId, (IEnumerable<SelectListItem>)ViewBag.Categories, new {@class = "form-control"})
                    <p class="help-block">@Html.ValidationMessageFor(x => x.CategoryId)</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default btn-primary">Save</button>
                    <a href="@Url.Action("Details", new {Id = Model.Id })" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
